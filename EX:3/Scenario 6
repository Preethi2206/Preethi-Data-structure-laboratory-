class RideRequestNode:
    def __init__(self, request_id):
        self.request_id = request_id
        self.next = None
class RideQueue:
    def __init__(self):
        self.front = None
        self.rear = None
    def add_request(self, request_id):
        new_request = RideRequestNode(request_id)
        if not self.rear:
            self.front = self.rear = new_request
        else:
            self.rear.next = new_request
            self.rear = new_request
        print(f"Ride request '{request_id}' added to the queue.")
    def serve_request(self):
        if not self.front:
            print("No ride requests to serve.")
            return None
        next_request = self.front.request_id
        self.front = self.front.next
        if not self.front:
            self.rear = None
        print(f"Serving ride request '{next_request}'.")
        return next_request
    def display_requests(self):
        if not self.front:
            print("No pending ride requests.")
        else:
            print("Current pending ride requests:")
            current = self.front
            while current:
                print(f"- {current.request_id}")
                current = current.next
ride_queue = RideQueue()
ride_queue.add_request("Ride_001")
ride_queue.add_request("Ride_002")
ride_queue.display_requests()
ride_queue.serve_request()
ride_queue.display_requests()

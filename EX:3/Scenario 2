class TicketQueue:
    def __init__(self):
        self.queue = []
    def add_customer(self, customer_name):
        self.queue.append(customer_name)
        print(f"Customer '{customer_name}' added to the queue.")
    def serve_customer(self):
        if not self.queue:
            print("No customers to serve.")
            return None
        next_customer = self.queue.pop(0)
        print(f"Serving customer '{next_customer}'.")
        return next_customer
    def display_queue(self):
        if not self.queue:
            print("No customers in the queue.")
        else:
            print("Current queue of customers:")
            for customer in self.queue:
                print(f"- {customer}")
booking_system = TicketQueue()
booking_system.add_customer("Alice")
booking_system.add_customer("Bob")
booking_system.display_queue()
booking_system.serve_customer()
booking_system.display_queue()

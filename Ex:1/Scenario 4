class Node:
    def __init__(self, task):
        self.task = task
        self.next = None
class TaskList:
    def __init__(self):
        self.head = None
    def add_task(self, task):
        new_node = Node(task)
        new_node.next = self.head
        self.head = new_node
        print(f"Task '{task}' added at the beginning.")
    def remove_task(self):
        if not self.head:
            print("No tasks to remove.")
            return
        if not self.head.next:
            print(f"Task '{self.head.task}' removed from the end.")
            self.head = None
            return
        current = self.head
        while current.next.next:
            current = current.next
        print(f"Task '{current.next.task}' removed from the end.")
        current.next = None
    def display_tasks(self):
        if not self.head:
            print("No tasks available.")
        else:
            print("Task List:")
            current = self.head
            while current:
                print(f"- {current.task}")
                current = current.next
task_list = TaskList()
task_list.add_task("Finish report")
task_list.add_task("Submit assignment")
task_list.display_tasks()
task_list.remove_task()
task_list.display_tasks()

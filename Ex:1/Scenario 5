class SongNode:
    def __init__(self, song_name):
        self.song_name = song_name
        self.next = None
class MusicPlaylist:
    def __init__(self):
        self.head = None
    def add_song(self, song_name):
        new_node = SongNode(song_name)
        if not self.head:
            self.head = new_node
        else:
            current = self.head
            while current.next:
                current = current.next
            current.next = new_node
        print(f"Song '{song_name}' added to the playlist.")
    def remove_song(self, song_name):
        if not self.head:
            print("No songs to remove.")
            return
        if self.head.song_name == song_name:
            self.head = self.head.next
            print(f"Song '{song_name}' removed from the playlist.")
            return
        current = self.head
        while current.next and current.next.song_name != song_name:
            current = current.next
        if current.next:
            current.next = current.next.next
            print(f"Song '{song_name}' removed from the playlist.")
        else:
            print(f"Song '{song_name}' not found in the playlist.")
    def display_playlist(self):
        if not self.head:
            print("The playlist is empty.")
        else:
            print("Playlist:")
            current = self.head
            while current:
                print(f"- {current.song_name}")
                current = current.next
playlist = MusicPlaylist()
playlist.add_song("Song A")
playlist.add_song("Song B")
playlist.display_playlist()
playlist.remove_song("Song A")
playlist.display_playlist()

class BookNode:
    def __init__(self, title):
        self.title = title
        self.next = None
        self.prev = None
class Library:
    def __init__(self):
        self.head = None
        self.tail = None
    def add_book(self, title):
        new_node = BookNode(title)
        if not self.head:
            self.head = self.tail = new_node
        else:
            self.tail.next = new_node
            new_node.prev = self.tail
            self.tail = new_node     
print(f"Book '{title}' added to the library.")
    def remove_book(self, title):
        current = self.head
        while current:
            if current.title == title:
                if current.prev:
                    current.prev.next = current.next
                if current.next:
                    current.next.prev = current.prev
                if current == self.head:
                    self.head = current.next
                if current == self.tail:
                    self.tail = current.prev
                print(f"Book '{title}' removed from the library.")
                return
            current = current.next
        print(f"Book '{title}' not found in the library.")
    def display_books_forward(self):
        if not self.head:
            print("No books in the library.")
        else:
            print("Library books (forward order):")
            current = self.head
            while current:
                print(f"- {current.title}")
                current = current.next
    def display_books_reverse(self):
        if not self.tail:
            print("No books in the library.")
        else:
            print("Library books (reverse order):")
            current = self.tail
            while current:
                print(f"- {current.title}")
                current = current.prev
library = Library()
library.add_book("Book A")
library.add_book("Book B")
library.display_books_forward()
library.display_books_reverse()
library.remove_book("Book A")
library.display_books_forward()

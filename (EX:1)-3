class GradeManagement:
    def __init__(self):
        self.grades = []        
    def add_grade(self, grade):
        self.grades.append(grade)
        print(f"Grade {grade} added.")        
    def calculate_average(self):
        if not self.grades:
            print("No grades available to calculate average.")
            return 0
        average = sum(self.grades) / len(self.grades)
        print(f"Average Grade: {average:.2f}")
        return average    
    def display_grades(self):
        if not self.grades:
            print("No grades available.")
        else:
            print("Grades List:")
            for grade in self.grades:
                print(f"- {grade}")
grade_manager = GradeManagement()
grade_manager.add_grade(85)
grade_manager.add_grade(92)
grade_manager.display_grades()
grade_manager.calculate_average()
